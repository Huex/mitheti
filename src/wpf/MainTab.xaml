<UserControl x:Class="Mitheti.Wpf.MainTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mitheti.Wpf"
             mc:Ignorable="d"
             Loaded="OnLoaded"
             d:DesignHeight="500" d:DesignWidth="350">
    <StackPanel>
        <Label Content="{Binding IsLaunchedString}" />
        <Button Click="OnStartClick" Content="{Binding Localization[Window:Main:Button:Start]}" />
        <Button Click="OnStopClick" Content="{Binding Localization[Window:Main:Button:Stop]}" />
        <Button Click="OnExitClick" Content="{Binding Localization[Window:Main:Button:Exit]}" />
    </StackPanel>
</UserControl>