<Window x:Class="Mitheti.Wpf.MainWindow" xml:lang="en-US"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mitheti.Wpf"
        mc:Ignorable="d"
        Height="200" Width="300" WindowStyle="SingleBorderWindow" Icon="/Resources/appIcon.png">
    <Grid>
        <Label Content="{Binding IsLaunched}" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Button x:Uid="ButtonStart" Click="OnStartClick" Content="запустить" Margin="0,55,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Click="OnStopClick" Content="остановить" Margin="0,80,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Click="OnStatisticClick" Content="статистика" Margin="0,105,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
