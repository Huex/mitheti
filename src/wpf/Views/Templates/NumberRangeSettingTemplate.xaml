<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:Mitheti.Wpf.Models;assembly=Mitheti.Wpf">
    <DataTemplate x:Key="NumberRangeSettingTemplate">
        <StackPanel>
            <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock}">
                <Run Text="{Binding Labels[0]}" />
                <m:Chip>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock}">
                            <Run Text="{Binding Value}" />
                            <Run Text="{Binding Labels[1]}" />
                        </TextBlock>
                    </StackPanel>
                </m:Chip>
            </TextBlock>
            <Slider Value="{Binding Value}" Minimum="{Binding Min}" Maximum="{Binding Max}"
                    Width="500" Margin="8, 8, 8, 32" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>