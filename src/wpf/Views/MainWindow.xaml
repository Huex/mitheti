<Window x:Class="Mitheti.Wpf.Views.MainWindow" xml:lang="en-US"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="600" Width="400" WindowStyle="SingleBorderWindow" Icon="/Resources/app.png">
    <Grid>
        <TabControl>
            <TabItem x:Name="TabMain" Header="{Binding Localization[Window:Main:Tab:Title]}" />
            <TabItem x:Name="TabStatistic" Header="{Binding Localization[Window:Statistic:Tab:Title]}" />
            <TabItem x:Name="TabAbout" Header="{Binding Localization[Window:About:Tab:Title]}" />
            <!-- TODO: add settings changing; -->
